{
  "manifest_version": 3,
  "name": "すしの手",
  "version": "0.1.1",
  "description": "ページ内の画像を検出して一括ダウンロード",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_title": "すしの手"
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
